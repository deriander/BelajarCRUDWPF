<Window x:Class="BelajarCRUDWPF.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelajarCRUDWPF"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="58,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <Button x:Name="btnSendPassword" Click="btnSendPassword_Click" Content="Send Password" HorizontalAlignment="Left" Margin="58,171,0,0" VerticalAlignment="Top" Width="177"/>
        <Label Content="Forgot Password" HorizontalAlignment="Left" Margin="69,22,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="58,83,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBackToLoginWindow" Click="btnBackToLoginWindow_Click" Foreground="Gray" Content="Back" HorizontalAlignment="Left" Margin="58,214,0,0" VerticalAlignment="Top" Width="177" FontSize="12" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Normal"/>

    </Grid>
</Window>
